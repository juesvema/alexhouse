<p id="notice"><%= notice %></p>

<h1>Listing Zapateria</h1>

<table>
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Imagen1</th>
      <th>Imagen2</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zapateria.each do |zapaterium| %>
      <tr>
        <td><%= image_tag zapateria.imagen.url %></td>
        <td><%= image_tag zapateria.imagen1.url %></td>
        <td><%= image_tag zapateria.imagen2.url %></td>
        <td><%= zapaterium.nombre %></td>
        <td><%= link_to 'Show', zapaterium %></td>
        <td><%= link_to 'Edit', edit_zapaterium_path(zapaterium) %></td>
        <td><%= link_to 'Destroy', zapaterium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

